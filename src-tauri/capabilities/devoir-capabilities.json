{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "devoir-capabilities",
  "description": "Permissions pour ouvrir/enregistrer des fichiers et dialogues.",
  "platforms": [
    "windows",
    "macOS",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "webviews": [
    "main"
  ],
  "urls": [
    "local",
    "http://localhost:*",
    "http://127.0.0.1:*"
  ],
  "permissions": [
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    "fs:read-all",
    "fs:write-all",
    "core:path:default",
    "core:path:allow-join",
    "core:path:allow-resolve-directory",
    "core:default",
    "updater:default",
    "process:default"
  ]
}